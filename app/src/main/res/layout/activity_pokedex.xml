<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pokedex">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="205dp"
        android:layout_height="66dp"
         android:id="@+id/title"
            >
    </TextView>
    <TextView
        android:layout_width="205dp"
        android:layout_height="66dp"
        android:id="@+id/name"></TextView></LinearLayout>

    <ImageView
    android:scaleType="centerCrop"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:src="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Type"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:text="Ability"
    android:textAlignment="center"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/ability"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="205dp"
            android:layout_height="29dp"
            android:text="Gender Ratio"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:text="Catch Rate"
            android:textAlignment="center"></TextView>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="205dp"
        android:layout_height="66dp"
        android:id="@+id/genderratio"/>
    <TextView
        android:layout_width="205dp"
        android:layout_height="66dp"
        android:id="@+id/catchrate"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Leveling Rate"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lvlrate"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="EV yield"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="HP"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="ATK"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="DEF"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="SP.ATK"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="SP.DEF"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="SPD"
            android:textAlignment="center"></TextView>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="HP"
        android:textAlignment="center"></TextView>
    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="ATK"
        android:textAlignment="center"></TextView>
    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="DEF"
        android:textAlignment="center"></TextView>
    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="SP.ATK"
        android:textAlignment="center"></TextView>
    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="SP.DEF"
        android:textAlignment="center"></TextView>
    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="SPD"
        android:textAlignment="center"></TextView>
    </LinearLayout>
</LinearLayout>